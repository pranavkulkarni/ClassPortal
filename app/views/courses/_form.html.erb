
<%= form_for(@course) do |f| %>
  <% if @course.errors.any? %>

    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <%= f.label :courseNumber %><br>
    <%= f.text_field :courseNumber %>
  </div>
  <div class="container">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="container">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
    <div class="container">
      <%= f.label :instructor_id %><br>
      <%= f.select :instructor_id, options_for_select(Instructor.all.map{|s|[s.name, s.id]}), {:prompt =>"Select Instructor"} %>
    </div>
  <div class="container">
    <%= f.label :startDate %><br>
    <%= f.date_select :startDate %>
  </div>
  <div class="container">
    <%= f.label :endDate %><br>
    <%= f.date_select :endDate %>
  </div>
  <div class="container">
    <%= f.label :status %><br>
    <%= f.select :status, options_for_select(["Active", "Inactive"]), {:prompt =>"Select Status"} %>
  </div>
    <br/>
  <div class="container">
    <%= f.submit %>
  </div>
<% end %>

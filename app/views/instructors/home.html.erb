<br/>


<div>
  <h1>Your Courses:</h1>

  <table>
    <thead>
    <tr>
      <th>Course</th>
      <th>Actions</th>
      <!-- <th>Password</th> -->
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% Course.all.select { |x| x.instructor_id == session[:current_user_id]}.each do |c| %>
        <tr>
          <td><%= c.courseNumber.to_s + ' - ' + c.title.to_s%></td>
          <td><%= link_to 'Manage Students', '/instructors/land/manage_student' %></td>

        </tr>
    <% end %>
    </tbody>
  </table>

</div>

<form class="form" method='get' action = '/admins'>
  <button name = "manage_admins" type="submit" id="manage_admin_button">Manage Admins</button><br/>
</form>


<html>
<body>

<%= render 'shared/navigation' %>
<%= flash[:notice] if flash[:notice]%>

<div class="panel panel-default">

  <div class="panel-heading">Showing Course Details</div>

  <table class="table">
    <thead>
    <tr>
      <th>Course</th>
      <th></th>
      <th></th>
      <th colspan="5"></th>
    </tr>
    </thead>

    <tbody>
    <form class="form-control" action='dispatcher' method='post'>
    <% Course.all.select { |x| x.instructor_id == session[:current_user_id]}.each do |c| %>
        <tr>
          <td><%= radio_button_tag 'radio_checked', c.id -%></td>
          <td><%= c.courseNumber.to_s + ' - ' + c.title.to_s%></td>
        </tr>
        <input id="tokenInsId" name="tokenInsId" type="hidden" value=<%= c.instructor_id %> />
        <input id="tokenCourseId" name="tokenCourseId" type="hidden" value=<%= c.id %> />
    <% end %>
    <tr>
      <td><button class="btn btn-default btn-primary btn-block" name = "manage_student" type="submit" id="manage_student-button">Manage Students</button></td>
      <td><button class="btn btn-default btn-primary btn-block" name = "manage_course_material" type="submit" id="manage_course_material-button">Manage Course Material</button></td>
      <td><button class="btn btn-default btn-primary btn-block" name = "add_enrollment" type="submit" id="add_enrollment-button">Add Enrollments</button></td>
      <td><button class="btn btn-default btn-primary btn-block" name = "send_and_view_messages" type="submit" id="send_and_view_messages-button">Send And View Messages</button></td>
    </tr>
    </form>
    </tbody>
  </table>


</div>

</body>
</html>


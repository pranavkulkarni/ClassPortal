<%= render 'shared/navigation' %>
<p id="notice"><%= notice %></p>

<div class="panel panel-default">

  <div class="panel-heading">Listing Grade</div>


<table>
  <thead>
    <tr>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grades.each do |grade| %>
      <tr>
        <td><%= grade.grade %></td>
        <td><%= link_to 'Show', grade %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
        <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a class="btn btn-default btn-primary btn-lg" href="<%= new_grade_path %>" >New Grade</a>
</div>

<p id="notice"><%= notice %></p>

<h1>Listing Admins</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <!-- <th>Password</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= admin.email %></td>
        <!--<td><%= admin.password %></td> -->
        <!--<td><%= link_to 'Show', admin %></td> -->
        <% if admin.id == session[:current_user_id] %>
        <td><%= link_to 'Edit', edit_admin_path(admin) %></td>
        <% end %>
        <% if admin.name != 'Pranav Kulkarni' and admin.id != session[:current_user_id]%>
        <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure you want to delete?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

